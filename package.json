{
  "name": "@ionic/pwa-toolkit",
  "productName": "PDF Manager",
  "private": true,
  "version": "0.0.1",
  "description": "Search and view PDFs",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "start.sw": "npm run start --service-worker",
    "test": "jest",
    "test.watch": "jest --watch",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icon/SITFonline.ico.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icon/SITFonline.ico --prune=true --out=release-builds --version-string.CompanyName=Evidential --version-string.FileDescription=CE --version-string.ProductName=\"PDF Manager\""
  },
  "dependencies": {
    "@capacitor/cli": "^1.0.0-beta.4",
    "@capacitor/core": "^1.0.0-beta.4",
    "@ionic/core": "4.0.0-beta.0",
    "@stencil/core": "0.11.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "electron-packager": "^12.1.0",
    "electron": "latest",
    "jest": "^22.4.3",
    "os-path-plugin": "^0.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/ionic-pwa-toolkit.git"
  },
  "author": "Ionic Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ionic-team/stencil"
  },
  "homepage": "https://github.com/ionic-team/ionic-pwa-toolkit",
  "jest": {
    "transform": {
      "^.+\\.(js|ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
